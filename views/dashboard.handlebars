<section>
    <h1 class="dashboard-page-top">DASHBOARD</h1>

    <h2>Create Post</h2>

    <form class="post-entry">
        <div>
            <label for"post-title">Post Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for"post-link">Post Link</label>
            <input type="text" id="post-link" name="post-link" />
        </div>
        <div>
            <label for"post-content">Post Content</label>
            <textarea id="post-content"></textarea>
        </div>
        <button type="submit">Create Post</button>
    </form>
</section>

{{#if posts.length}}
<section class="current">
    <h2>Current Posts</h2>
    <ul>
        {{#each posts as |post|}}
            <li>
                {{> post-details post}}
                    <a href="/dashboard/edit/{{post.id}}" class="edit">Edit Post</a>
            </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="/javascript/newpost.js"></script>

