<article class="post">

    <div class="title-section">
        <div class="post-title">
            <a href="/dashboard/blogpost/">{{post_title}}</a>
        </div>
        <div class="posted-by">Posted by {{user.username}} on {{format_date created_at}}</div>
    </div>

    <div class="post-content">
        <textarea>{{post_content}}</textarea>
   </div>

    <div class="commenting">
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>

</article>