<article>
    <a href="/dashboard"> &larr; Return to Dashboard</a>
    
    <h2>Edit</h2>
    
    <form class="edit-post">
        <div>
            <label for"post-title">Edit Post Title</label>
            <input name="post-title" type="text" value="{{post_title}}" /><br><br>
            <label for"post-content">Edit Post Content</label>
            <textarea id="post-content"></textarea>
        </div>
        <div>
         <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}} on {{format_date post.created_at}}</a>   
        </div>
        <button type="submit" class="save-edit">Save</button>
        <button type="button" class="delete-btn">Delete</button>
    </form>
</article>

<form class="comment-section">
    <div>
        <textarea class="comment-statement"></textarea>
    </div>
    <div>
        <button type="submit" class="add-comment">Add a Comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/javascript/editpost.js"></script>
<script src="/javascript/deletepost.js"></script>
<script src="/javascript/leavecomment.js"></script>